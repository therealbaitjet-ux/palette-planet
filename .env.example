# Palette Planet Environment Variables
# Copy this file to .env.local for local development
# Add these to Vercel for production

# =============================================================================
# REQUIRED - Admin Authentication
# =============================================================================
# Admin password for accessing the admin dashboard
# Generate a strong password (min 12 chars, mix of letters/numbers/symbols)
ADMIN_PASSWORD=your_secure_admin_password_here

# =============================================================================
# REQUIRED - Supabase Database
# =============================================================================
# Get these from your Supabase project settings
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# =============================================================================
# REQUIRED - Cloudinary (for logo storage)
# =============================================================================
# Get these from your Cloudinary dashboard
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# =============================================================================
# REQUIRED - GitHub (for backup commits)
# =============================================================================
# Create a Personal Access Token with 'repo' scope
GITHUB_TOKEN=ghp_your_token_here

# =============================================================================
# OPTIONAL - Analytics & Ads
# =============================================================================
# Google Analytics 4 Measurement ID
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# Google AdSense Publisher ID
NEXT_PUBLIC_ADSENSE_ID=ca-pub-xxxxxxxxxxxxxxxx

# =============================================================================
# OPTIONAL - Redis (for rate limiting in production)
# =============================================================================
# Sign up at upstash.com for free Redis
UPSTASH_REDIS_REST_URL=https://your-redis-url.upstash.io
UPSTASH_REDIS_REST_TOKEN=your_redis_token

# =============================================================================
# SECURITY CHECKLIST
# =============================================================================
# [ ] All keys are kept secret (never commit to git)
# [ ] ADMIN_PASSWORD is strong (12+ characters)
# [ ] SUPABASE_SERVICE_ROLE_KEY is different from ANON_KEY
# [ ] GITHUB_TOKEN has minimal permissions (repo scope only)
# [ ] CLOUDINARY keys are for a dedicated upload preset
# [ ] All variables are set in Vercel dashboard
# =============================================================================
